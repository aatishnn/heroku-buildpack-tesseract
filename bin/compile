#!/bin/bash
BUILD_DIR=$1

BUILD_PATH=/tmp

###############
#  TESSEDATA  #
###############
mkdir -p $BUILD_DIR/vendor/share
wget "https://github.com/tesseract-ocr/tessdata/blob/3.04.00/san.traineddata?raw=true" -O $BUILD_DIR/vendor/share/san.traineddata


# export TESSDATA_PREFIX
echo "Building runtime environment"
mkdir -p $BUILD_DIR/.profile.d
PROFILE_D=$BUILD_DIR/.profile.d/tesseract.sh
echo "export TESSDATA_PREFIX=\"\$HOME/vendor/share/\";" >> $PROFILE_D
